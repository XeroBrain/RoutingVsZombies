<Window x:Class="RtgVsZmbs.View.UserOverviewView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserOverviewView" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Button Background="#BADA55" Height="20" VerticalAlignment="Top">Add Class</Button>
            <Button Background="#BADA55" Height="20" VerticalAlignment="Top">Edit Class</Button>
            <Button Background="#BADA55" Height="20" VerticalAlignment="Top">Delete Class</Button>
            <Button Background="#BADA55" Height="20" VerticalAlignment="Top">Add Pupil</Button>
            <Button Background="#BADA55" Height="20" VerticalAlignment="Top">Edit Pupil</Button>
            <Button Background="#BADA55" Height="20" VerticalAlignment="Top">Delete Pupil</Button>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="1">
            <ListBox DataContext="{Binding UserList}"></ListBox>
        </StackPanel>
    </Grid>
</Window>
