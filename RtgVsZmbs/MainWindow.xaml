<Window x:Class="RtgVsZmbs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!--Gird Colums and Rows-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" Name="TopRow"/>
            <RowDefinition Height="2*" Name="B1"/>
            <RowDefinition Height="1*" Name="BottomRow"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="1" Grid.Row="1" Content="START GAME" Background="#BADA55"></Button>
        

    </Grid>
</Window>
